<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ChatFragment"
    android:background="@drawable/background_map">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@drawable/rounded_main_window">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:onClick="closeChat"
                    android:background="@drawable/ic_back"
                    android:id="@+id/back_ic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/chat_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="0dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:id="@+id/name"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/colorMain"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ad_info"
                    android:layout_width="250dp"
                    android:layout_weight="6"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMain"
                    android:textSize="20dp" />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:id="@+id/ad_img"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/chat_recycler">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:hint="Type smth"
                android:layout_weight="7"
                android:padding="10dp"
                android:id="@+id/msg_inpt"
                android:background="@drawable/chat_inpt"/>
            <View
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/send_btn"
                android:foreground="@drawable/ic_baseline_send_24"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="dfhdf"
        android:id="@+id/dialog_id"/>
</RelativeLayout>