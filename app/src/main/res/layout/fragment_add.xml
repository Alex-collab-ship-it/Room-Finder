<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AddFragment"
    android:background="@drawable/background_map">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="@drawable/rounded_main_window">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_back"
                    android:onClick="closeAd"
                    android:id="@+id/back_ic"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Адрес"
                    android:id="@+id/address"
                    android:textColor="#000"
                    android:textSize="25dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_distance"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#17a2b8"
                            android:text="500 м от вас"
                            android:id="@+id/distance"/>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Показать на карте"
                        android:id="@+id/showOnMap"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#17a2b8"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:id="@+id/description"
                    android:textColor="#000"
                    android:layout_margin="10dp"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:id="@+id/days"
                    android:text="Максимальное количество суток проживания  -"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/author_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/profile_photo"
                            app:civ_border_color="#FF000000"
                            app:civ_border_width="0dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:maxWidth="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/name"
                            android:layout_gravity="center_vertical"
                            android:textColor="#000"
                            android:text="Alexander"
                            android:textSize="20dp"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:text="3000 ₽"
                        android:id="@+id/price"
                        android:textSize="25dp"
                        android:textColor="#17a2b8"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#17a2b8"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/green_btn"
                    android:padding="10dp"
                    android:textColor="#FFF"
                    android:onClick="addChat"
                    android:text="Перейти в диалог" />

                <TextView
                    android:id="@+id/ad_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>