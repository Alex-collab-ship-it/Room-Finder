<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/modal_confirm"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_modal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:textColor="@color/colorMain"
        android:text="Подтверждение"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorMain"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="Вы действительно хотите удалить это объявление?"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorMain"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="Нет"
            android:onClick="closeConfirmModal"
            android:textColor="#FFF"
            android:background="@drawable/gray_btn"/>
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:onClick="deleteAd"
            android:background="@drawable/red_btn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FFF"
                android:text="УДАЛИТЬ"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/recyclerAd_id"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>