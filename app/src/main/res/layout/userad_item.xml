<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_ad"
    android:id="@+id/userad_item"
    android:onClick="showAd"
    android:layout_marginVertical="5dp"
    android:padding="7dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/recyclerImg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Адрес"
            android:id="@+id/recyclerAddress"
            android:textSize="20dp"
            android:textColor="#000"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена"
                android:id="@+id/recyclerPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:textSize="21dp"
                android:textColor="#17a2b8"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="deleteAdModal"
                android:layout_alignParentRight="true">
                <View
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/ic_delete"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/recyclerAd_id"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>